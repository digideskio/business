@require 'base/variables'
@require 'base/helpers'
@require 'base/colors'

.paywall 
	position fixed 
	top 0
	left 0 
	height 100%
	width 100%
	background #222
	backface-visibilty hidden
	overflow hidden
	z-index 8675309
	
	&.hide 
		display none
	
	&--logo
		display inline-block
		&:hover
			opacity 0.75
	
	p 
		width 100%
		font-size 1em
		line-height 1.8
		
	a.btn--sub
		display inline-block
		padding 0.5em 1em
		max-width 15em
		width 100%
		background-color $globe-blue
		color #111
		transition 0.2s ease-in-out all
		border-radius 3px
		padding 1em 0.5em
		&:hover
			background-color darken($globe-blue, 10)
	
	&--content
		max-width 40em
		margin 0 auto
		width 90%
		text-align center
		position relative
		top 45%
		transform translateY(-50%)
		&-inner * + *
			margin-bottom 1.5em
	
	&--cta
		color #ddd
		text-shadow 0 0 8px #000
		
		&:first-of-type:before
			content ''
			display block
			width 2em
			margin 0 auto
			border-top 1px solid #ccc
			padding-top 1em
	
	&--login
		background-color rgba(0,0,0,0.6)
		border-radius 3px
		padding 0.25em
	
	.logo--lg
		fill #eee
		margin-bottom 0.5em
		width 100%
		height 1.5em
		display block

// video
.fullscreen-bg
	position fixed
	top 0
	right 0
	bottom 0
	left 0
	overflow hidden
	z-index -100

.fullscreen-bg__video
	position absolute
	top 0
	left 0
	width 100%
	height 100%
	display block
	@media (min-aspect-ratio: 16/9)
		height 300%
		top -100%

	@media (max-aspect-ratio: 16/9)
		width 300%
		left -100%